{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        <div class="row d-flex justify-content-center">



            <img class="col-4 img-fluid m-3" src="{{ asset('uploads/'~user.picture) }}" >


        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Sector</th>
                <td>{{ user.sector }}</td>
            </tr>
            <tr>
                <th>Contract</th>
                <td>{{ user.contract }}</td>
            </tr>
            {% if user.contract in ['CDD','Interim'] %}
            <tr>
                <th>Date</th>
                <td>{{ user.date ? user.date|date('Y-m-d') : '' }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <a class="btn btn-danger m-2" href="{{ path('app_user_index') }}">Back to list</a>

    {% if app.user.hasRole('ROLE_RH') %}


    <a class="btn btn-secondary m-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Edit</a>
        {{ include('user/_delete_form.html.twig') }}

    {% endif %}


{% endblock %}
